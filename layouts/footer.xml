<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/silk_clay_texture"
    android:padding="20dp"
    android:gravity="center">

    <ImageView
        android:src="@drawable/icons/icon_phone"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="8dp"/>
    <ImageView
        android:src="@drawable/icons/icon_email"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="8dp"/>
    <ImageView
        android:src="@drawable/icons/icon_instagram"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="8dp"/>
    <ImageView
        android:src="@drawable/icons/icon_facebook"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="8dp"/>
    <ImageView
        android:src="@drawable/icons/icon_share"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="8dp"/>
</LinearLayout>
